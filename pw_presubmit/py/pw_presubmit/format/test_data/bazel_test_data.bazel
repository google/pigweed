load("@rules_python//python:proto.bzl", "py_proto_library")
load(
    "//pw_protobuf_compiler:pw_proto_library.bzl",
    "pwpb_proto_library",
)

package(
    default_visibility = ["//visibility:public"],
)

cc_library(
    name = "pw_my_module",
    hdrs = ["public/pw_my_module/standing_screeb.h"],
    strip_include_prefix = "public",
)

proto_library(
    name = "foo_proto",
    srcs = select({
        "//conditions:default": [
            "foo.proto",
        ],
        "//mymodule:condition": [],
    }),
)

py_proto_library(
    name = "foo_proto_pb2",
    deps = [":foo_proto"],
)

pwpb_proto_library(
    name = "foo_proto_pwpb",
    deps = [":foo_proto"],
)
