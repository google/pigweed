"""BUILD.bazel file for mbedtls."""

package(
    default_visibility = ["//visibility:public"],
)

cc_library(
    name = "mbedtls",
    srcs = glob(
        include = ["library/*.c"],
        exclude = ["**/psa*.c"],
    ),
    hdrs = glob(
        include = [
            "include/**/*.h",
            "library/*.h",
        ],
        exclude = ["include/psa/**"],
    ),
    includes = ["include/"],
    deps = [
        ":mbedtls_config",
    ],
)

# Library containing project-specific mbedtls config header file.
label_flag(
    name = "mbedtls_config",
    build_setting_default = ":empty_config",
)

cc_library(name = "empty_config")
