      "$dir_pw_third_party_ambiq_SDK/mcu/apollo4p/hal/mcu",
      "$dir_pw_third_party_ambiq_SDK/mcu/apollo4p/hal",
      "$dir_pw_third_party_ambiq_SDK/mcu/apollo4p",
      "$dir_pw_third_party_ambiq_SDK/boards/apollo4p_evb/bsp",
