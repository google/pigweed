_CORTEX_M33_NOFP_OPTS = [
    "-mcpu=cortex-m33+nofp",
    "-mfloat-abi=soft",
]

pw_cc_toolchain_feature(
    name = "cortex-m33+nofp",
    asmopts = _CORTEX_M33_NOFP_OPTS,
    copts = _CORTEX_M33_NOFP_OPTS,
    linkopts = _CORTEX_M33_NOFP_OPTS,
