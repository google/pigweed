    copts = _CORTEX_M3_OPTS,
    linkopts = _CORTEX_M3_OPTS,
)

_CORTEX_M4_OPTS = [
    "-mcpu=cortex-m4",
    "-mfloat-abi=hard",
]

pw_cc_toolchain_feature(
