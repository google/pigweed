_CORTEX_M4_NOFP_OPTS = [
    "-mcpu=cortex-m4+nofp",
    "-mfloat-abi=soft",
]

pw_cc_toolchain_feature(
    name = "cortex-m4+nofp",
    asmopts = _CORTEX_M4_NOFP_OPTS,
    copts = _CORTEX_M4_NOFP_OPTS,
