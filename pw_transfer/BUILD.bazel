        "//pw_rpc:test_helpers",
        "//pw_rpc/raw:test_method_context",
        "//pw_thread:thread",
        "//pw_unit_test",
    ],
)

pw_cc_test(
    name = "client_test",
    srcs = ["client_test.cc"],
    # TODO: b/235345886 - Fix transfer tests on Windows and non-host builds.
    target_compatible_with = select(hosts_lin_mac),
    deps = [
        ":client",
        ":test_helpers",
        "//pw_rpc:test_helpers",
        "//pw_rpc/raw:client_testing",
        "//pw_thread:sleep",
        "//pw_thread:thread",
        "//pw_unit_test",
    ],
