proto_library(
    name = "transfer_proto",
    srcs = [
        "transfer.proto",
    ],
)

pwpb_proto_library(
    name = "transfer_pwpb",
    deps = [":transfer_proto"],
)

raw_rpc_proto_library(
    name = "transfer_raw_rpc",
    deps = [":transfer_proto"],
)

